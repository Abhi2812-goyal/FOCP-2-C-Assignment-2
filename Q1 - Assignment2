#include <iostream>
using namespace std;

class Student {
private:
    char studentName[50];
    int rollNumber;
    float studentCGPA;
    char enrolledCourses[5][30];
    int courseCount;

    void copyString(char dest[], const char src[]) {
        int i = 0;
        while (src[i] != '\0') {
            dest[i] = src[i];
            i++;
        }
        dest[i] = '\0';
    }

public:
    Student() {
        copyString(studentName, "Unknown");
        rollNumber = 0;
        studentCGPA = 0.0;
        courseCount = 0;
        cout << "Default constructor called." << endl;
    }

    Student(const char name[], int roll, float cgpa, const char courses[][30], int count) {
        copyString(studentName, name);
        rollNumber = roll;
        studentCGPA = cgpa;
        courseCount = count;

        for (int i = 0; i < count && i < 5; i++) {
            copyString(enrolledCourses[i], courses[i]);
        }

        cout << "Parameterized constructor called." << endl;
    }

    Student(const Student &other) {
        copyString(studentName, other.studentName);
        rollNumber = other.rollNumber;
        studentCGPA = other.studentCGPA;
        courseCount = other.courseCount;

        for (int i = 0; i < courseCount; i++) {
            copyString(enrolledCourses[i], other.enrolledCourses[i]);
        }

        cout << "Copy constructor called." << endl;
    }

    ~Student() {
        cout << "Destructor called for student: " << studentName << endl;
    }

    void displayInfo() {
        cout << "Name: " << studentName << endl;
        cout << "Roll Number: " << rollNumber << endl;
        cout << "CGPA: " << studentCGPA << endl;
        cout << "Enrolled Courses: ";
        for (int i = 0; i < courseCount; i++) {
            cout << enrolledCourses[i] << " ";
        }
        cout << endl << endl;
    }
};

int main() {
    const char courses1[3][30] = {"Math", "Physics", "English"};
    Student student1("Ravi Kumar", 123, 9.0, courses1, 3);
    Student student2 = student1;
    Student student3;

    student1.displayInfo();
    student2.displayInfo();
    student3.displayInfo();

    return 0;
}
